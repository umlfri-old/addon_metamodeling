<ConnectionType xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd" id="Relationship">
    <Icon path="icons/relationship.png"/>
    <Domain id="Relationship" identity="name"/>
    
    <Appearance>
        <ConnectionLine style="solid" color="#cfg.Styles.Connection.LineColor"/>
        <ConnectionArrow index="-1" style="simple_arrow" color="#cfg.Styles.Connection.ArrowColor"/>
        <Label position="center">
            <Condition condition="#self.relationship_name">
                <Align align="center">
                    <Rectangle fill="#cfg.Styles.Connection.TextFill">
						<VBox expand="0">
						<TextBox text="&lt;&lt;" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                        <TextBox text="#self.relationship_name" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                        <TextBox text="&gt;&gt;" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                        </VBox>
                    </Rectangle>
                </Align>
            </Condition>
        </Label>
    </Appearance>
</ConnectionType>