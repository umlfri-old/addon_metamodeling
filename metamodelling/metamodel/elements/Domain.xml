<?xml version="1.0" encoding="utf-8"?>
<ElementType id="Domain" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/domain.png" />
    <Domain id="Domain" identity="domain_name" />
    <Connections/>
    <Appearance>
        <Shadow padding="3" color="#cfg.Styles.Element.ShadowColor">
            <Rectangle fill="#cfg.Styles.Element.FillColor" border="##20fa20">
                <HBox>
                    <Padding padding="5">
                        <HBox>
							<TextBox text="#self.domain_name" color="#cfg.Styles.Element.TextColor"/>
							<Line type="horizontal" color="#cfg.Styles.Element.LineColor"/>
                            <Loop collection="#self.properties">
								
                                <Condition condition="#name">
									<VBox>
										<TextBox text="#name" color="#cfg.Styles.Element.TextColor"/>
										<TextBox text=" : " color="#cfg.Styles.Element.TextColor"/>
										<TextBox text="#type" color="#cfg.Styles.Element.TextColor"/>
									</VBox>	
                                </Condition>
                            </Loop>
                        </HBox>
                    </Padding>
                    
                </HBox>
            </Rectangle>
        </Shadow>
    </Appearance>
</ElementType>