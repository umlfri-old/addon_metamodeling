<?xml version="1.0" encoding="utf-8"?>
<ElementType id="Connection" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/connection.png" />
    <Domain id="connection" identity="name" />
    <Connections>
        <Item value="Link" with="Element" allowrecursive="0"/>
        <Item value="Assemble" with="Enum,Element" allowrecursive="0"/>
    </Connections>
    <Appearance>
        <Sizer minheight="80" minwidth="60">
            <Rectangle fill="lightgreen" border="#cfg.Styles.Element.LineColor">
                <HBox>
                    <Padding top="3" bottom="3">
                      <Align align="center center">
                          <Icon filename="#self.icon" />
                      </Align>
                    </Padding>
                    <Line type="horizontal" color="#cfg.Styles.Element.LineColor"/>
                    <Padding top="7" bottom="7">
                        <Align align="center">
                            <TextBox text="#self.name"></TextBox>
                        </Align>
                    </Padding>
                    <Line type="horizontal" color="#cfg.Styles.Element.LineColor"/>
                    <Loop collection="#self.attributes">
                        <VBox>
                            <Padding left="5">
                                <TextBox text="#attName" color="#cfg.Styles.Element.TextColor"/>
                            </Padding>
                                <TextBox text=": " color="#cfg.Styles.Element.TextColor"/>
                                <TextBox text="#attType" color="#cfg.Styles.Element.TextColor"/>
                                <TextBox text=" = " color="#cfg.Styles.Element.TextColor"/>
                            <Padding right="5">
                                <TextBox text="#default" color="#cfg.Styles.Element.TextColor"/>
                            </Padding>
                        </VBox>
                    </Loop>
                </HBox>
            </Rectangle>
        </Sizer>
    </Appearance>
</ElementType>
